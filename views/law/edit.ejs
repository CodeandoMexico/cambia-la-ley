<h2 class="col-md-offset-2">Actualizar Ley</h2>
<form method="POST" action="/ley/law/update/<%= law.id %>" class="col-md-4 col-md-offset-2" role="form">
  <div class="form-group">
    <label for="name">Nombre</label>
    <input type="text" class="form-control" id="name" name="name"
      value="<%= law.name %>" placeholder="Nombre de la Ley" />
  </div>
  <div class="form-group">
    <label for="summary">Resumen</label>
    <textarea class="form-control" id="summary" name="summary" placeholder="Resumen de la ley, una pequeña descripción" rows="10"><%= law.summary %></textarea>
  </div>
  <div class="form-group">
    <label for="tag">Reforma a la que pertenece:</label>
    <select name="tag">
      <% _.each(tags, function(tag) {%>
        <option value="<%= tag.id %>"><%= tag.name %></option>
      <% }) %>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Actualizar</button>
</form>
