<script>
  function checkData() {
    document.getElementsByTagName('form'}[0].submit();
  }
</script>

<h2 class="col-md-offset-2">Nuevo artículo</h2>
<h4>Cada artículo debe de estar bajo una ley.</h4>
<form method="POST" action="/ley/article/create" class="col-md-3 col-md-offset-2" role="form">
  <div class="form-group">
    <label for="number">Número</label><br />
    <input type="number" class="form-control" id="number" name="number" placeholder="Número" min="1" required />
  </div>
  <br />
  <div class="form-group">
    <label for="body">Cuerpo</label><br />
    <textarea class="form-control" id="body" name="body" placeholder="Texto de artículo" cols="50" rows="10" required></textarea>
  </div>
  <br />
  <div class="form-group">
    <label for="law">Ley a la que pertenece:</label><br />
    <% if (laws.length == 0) { %>
      <small>
        No has creado leyes.<br />
        Crea una ley en esta <a href="/tag/create">liga</a> primero.<br />
        <u>No puedes crear artículos sin asociarlos a leyes.</u>
      </small>
    <% } else { %>
      <select name="law">
        <% for(var i = 0; i < laws.length; i++) {%>
          <option value="<%= laws[i].id %>"><%= laws[i].name %></option>
        <% } %>
      </select>
    <% } %>
  </div>
  <br />
  <% if (laws.length > 0) { %>
    <button type="submit" class="pure-button el-button el-button-primary">Crear</button>
  <% } else { %>
    <button class="pure-button pure-button-disabled">Crear</button>
  <% } %>
</form>
